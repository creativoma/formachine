{
  "name": "@creativoma/formachine",
  "version": "0.2.0",
  "description": "Type-safe, declarative multi-step forms for React",
  "type": "module",
  "author": "Mariano Ãlvarez",
  "repository": {
    "type": "git",
    "url": "https://github.com/creativoma/formachine.git"
  },
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./dist/core.d.ts",
        "default": "./dist/core.js"
      },
      "require": {
        "types": "./dist/core.d.cts",
        "default": "./dist/core.cjs"
      }
    },
    "./persist": {
      "import": {
        "types": "./dist/persist.d.ts",
        "default": "./dist/persist.js"
      },
      "require": {
        "types": "./dist/persist.d.cts",
        "default": "./dist/persist.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "coverage:ui": "vitest run --coverage && open coverage/index.html",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "validate": "pnpm check && pnpm typecheck && pnpm test:run",
    "clean": "rm -rf dist node_modules",
    "prepublishOnly": "pnpm validate && pnpm build",
    "changeset": "changeset",
    "version": "pnpm changeset version",
    "release": "pnpm build && pnpm publish --access public --no-git-checks"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.69.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.40.0",
    "zod": "^4.0.0"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=22"
  }
}
