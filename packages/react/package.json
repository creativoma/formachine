{
  "name": "@formachine/react",
  "version": "0.2.1",
  "description": "React bindings for formachine",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/creativoma/formachine.git",
    "directory": "packages/react"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@formachine/core": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
    "react-hook-form": "^7.69.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.40.0",
    "zod": "^4.0.0"
  },
  "license": "MIT"
}