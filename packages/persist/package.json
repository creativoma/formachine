{
  "name": "@formachine/persist",
  "version": "0.2.1",
  "description": "Persistence adapters for formachine",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/creativoma/formachine.git",
    "directory": "packages/persist"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./adapters": {
      "import": {
        "types": "./dist/adapters.d.ts",
        "default": "./dist/adapters.js"
      },
      "require": {
        "types": "./dist/adapters.d.cts",
        "default": "./dist/adapters.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@formachine/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "license": "MIT"
}